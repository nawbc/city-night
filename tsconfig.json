{
	"compilerOptions": {
		"jsx": "react",
		"strictNullChecks": true,
		"esModuleInterop": true,
		"removeComments": true,
		"noImplicitThis": true,
		"noEmitOnError": true,
		"noUnusedParameters": false,
		"noUnusedLocals": false,
		"skipLibCheck": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"target": "es5",
		"sourceMap": true,
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		]
	},
	"exclude": [
		"node_modules",
		"lib/assets"
	]
}
